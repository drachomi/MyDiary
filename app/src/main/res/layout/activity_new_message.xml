<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context="com.richard.imoh.mediary.NewMessage">
    <TextView
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:text="How are you feeling today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/richy"
            android:layout_width="50dp"
            android:layout_height="50dp" />



    </LinearLayout>
    <TextView

        android:id="@+id/title_txt"
        android:text="A Brief Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/title_edit_txt"
        android:background="@drawable/rounded_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/msg"
        android:text="Pour it all Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/msg_edit_text"
        android:background="@drawable/rounded_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="220dp" />
    <Button
        android:layout_margin="10dp"
        android:id="@+id/subbtn"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
